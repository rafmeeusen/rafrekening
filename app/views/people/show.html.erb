<p> <%= link_to 'Back', root_path + @project.secret %> </p>

<p> <b>Name:</b> <%= @person.name %> </p>

<% addExpPath = root_path + @project.secret + "/" + @person.name + "/new" %>
<p>
<%= link_to 'Add expense', addExpPath %>
</p>

<table>
  <% @person.expenses.each do |exp| %>
    <% expenseLink=root_path + @project.secret + "/"+ @person.name + "/expenses/" + exp.id.to_s %>
    <tr> <td> <%= exp.description %> </td> 
         <td> <%= exp.amount %> </td> 
         <td> <%= link_to 'Remove expense', expenseLink, :confirm=>'Are you sure?', :method=>:delete %> </td> </tr>
  <% end %> 
</table>

<p>
Number of expenses: <%=@person.expenses.count %> <br>
Total of expenses: <%=@person.totalAmount %> <br>
</p>

<p>Debug info: <br>
Project Id: <%= @project.id %> <br>
Person Id: <%= @person.id %> <br>

</p>
